{
  "default": {
    "paths": [
      "src/features/*.feature"
    ],
    "require": [
      "./src/steps/**/*.ts",
      "./src/support/**/*.ts",
      "src/steps/*.ts"
    ],
    "requireModule": [
      "ts-node/register"
    ],
    "formatOptions": {
      "snippetInterface": "async-await"
    },
    "format": [
      [
        "html",
        "cucumber-report.html"
      ],
      "summary",
      "progress-bar",
      "json:./cucumber-report.json"
    ]
  }
}